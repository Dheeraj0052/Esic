<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00081a">


    <Button
        android:id="@+id/btnemer"
        android:layout_width="169dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="#800000"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Emergency"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnonline"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:background="#85a3e0"
        android:fontFamily="sans-serif-condensed-light"
        android:text="ONLINE APPOINTMENT"
        android:textColor="#080401"

        android:textSize="19dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnsym"
        android:layout_width="272dp"
        android:layout_height="47dp"
        android:background="#85a3e0"
        android:layout_gravity="center"
        android:text="Common Symptoms"
        android:textStyle="bold"
        android:layout_margin="25dp"
        android:textSize="19dp"
        android:textColor="#080401"/>

    <Button
        android:id="@+id/btnconsult"
        android:layout_width="272dp"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="#85a3e0"
        android:layout_gravity="center"
        android:textSize="19dp"
        android:textColor="#080401"
        android:textStyle="bold"
        android:text="CONSULT A DOCTOR"
         />
    <Button
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="#080401"
        android:id="@+id/book"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        android:background="#85a3e0"
        app:layout_constraintTop_toBottomOf="@+id/btnsym"
        android:text="BOOKED APPOINTMENTS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384"
        tools:ignore="MissingConstraints" />
</LinearLayout>